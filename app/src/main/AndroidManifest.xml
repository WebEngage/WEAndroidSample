<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.personalization_sample">

    <queries>
        <package android:name="com.google.android.youtube" />

        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="www.youtube.com"
                android:scheme="https" />
        </intent>
    </queries>

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Personalizationsample"
        tools:targetApi="31">
        <activity
            android:name=".Inline.InlineActivity"
            android:exported="false" />
        <activity
            android:name=".Inline.RecyclerActivity"
            android:exported="false" />
        <activity
            android:name=".Inline.DynamicScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://www.webengage.com/screen1" -->
                <data
                    android:host="www.webengage.com"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
        </activity>
        <activity
            android:name=".Inline.ScreenDetails"
            android:exported="false" />
        <activity
            android:name=".Inline.CustomScreen"
            android:exported="false" />

        <meta-data
            android:name="com.webengage.sdk.android.environment"
            android:value="us" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>