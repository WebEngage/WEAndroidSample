<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large_xxx"
        android:layout_marginRight="@dimen/margin_large_xxx"
        android:layout_marginBottom="@dimen/margin_large_xxx"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/username_hint"
        android:textIsSelectable="true" />

    <!--<TextView-->
    <!--android:id="@+id/editProfileTextView"-->
    <!--style="@style/TextButtonStyle"-->
    <!--android:text="@string/edit_profile"-->
    <!--android:layout_marginBottom="@dimen/margin_large_xxx" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/profile_button"
                style="@style/ButtonStyle"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/profile_button" />

            <Button
                android:id="@+id/eventsButton"
                style="@style/ButtonStyle"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/events_button" />

            <Button
                android:id="@+id/screenButton"
                style="@style/ButtonStyle"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="SCREENS" />

            <Button
                android:id="@+id/pushButton"
                style="@style/ButtonStyle"
                android:text="@string/push_button" />

            <Button
                android:id="@+id/inAppButton"
                style="@style/ButtonStyle"
                android:text="@string/in_app_button" />


            <Button
                android:id="@+id/personalizationButton"
                style="@style/ButtonStyle"
                android:text="Inline Personalization" />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/displayHtmlTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="TextView"
        android:textSize="12dp"
        android:visibility="gone" />

</LinearLayout>