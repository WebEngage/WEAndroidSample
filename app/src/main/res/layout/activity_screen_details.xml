<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScreenDetails">

    <TextView
        android:id="@+id/sizeTV"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="Enter the List Size" />

    <EditText
        android:id="@+id/sizeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/screenTV"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="Enter Screen name" />

    <EditText
        android:id="@+id/screenEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/eventTV"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="Enter Event Name" />

    <EditText
        android:id="@+id/eventEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="Enter Id name" />

    <EditText
        android:id="@+id/idName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="Enter Id Name(Number)" />

    <EditText
        android:id="@+id/idValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RecyclerView"/>

    <Button
        android:id="@+id/addData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        />
    <Button
        android:id="@+id/saveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/screenList"
        android:orientation="vertical"
        />


</LinearLayout>